<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:background="@drawable/touched_circle_shape"
    android:orientation="vertical">

    <TextView
        android:id="@+id/number_touched_marker"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:width="15dp"
        android:height="25.5dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.19"
        android:text="1"
        android:textColor="#deffffff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/distance_touched_marker"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:width="30dp"
        android:height="13.5dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.11"
        android:text="start"
        android:textColor="#deffffff"
        android:textSize="9sp" />
</LinearLayout>